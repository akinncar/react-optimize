    "@babel/preset-react": "^7.12.1",
    "@babel/register": "^7.12.1",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/chai": "^4.2.14",
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/mocha": "^8.0.3",
    "@types/react": "^16.9.55",
    "@types/react-dom": "^16.9.9",
    "@types/sinon": "^9.0.8",
    "@types/webpack-env": "^1.15.3",
